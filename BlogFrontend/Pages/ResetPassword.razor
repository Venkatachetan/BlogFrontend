@page "/reset-password"
@layout LoginLayout
@using BlogFrontend.Models
@using BlogFrontend.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="d-flex justify-center align-center" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: #e91e63; width: 100vw; height: 100vh;">
    <div class="text-center" style="max-width: 500px; width: 100%; padding: 40px 20px;">
        <div class="mb-6">
            <MudIcon Icon="@Icons.Material.Filled.Article" Style="color: white; font-size: 40px;" Class="mb-2" />
            <MudText Typo="Typo.h5" Class="font-weight-bold" Style="color: white;">Blog Application</MudText>
        </div>

        <MudText Typo="Typo.h5" Class="mb-3" Style="color: white;">Reset Your Password</MudText>

        <MudText Typo="Typo.body2" Style="color: rgba(255,255,255,0.8);" Class="mb-4">
            Enter your new password below to reset your account.
        </MudText>

        <MudForm Class="mt-4">
            @if (!string.IsNullOrEmpty(message))
            {
                <MudAlert Severity="@severity" Variant="Variant.Filled" Dense="true" Class="mb-4">
                    @message
                </MudAlert>
            }

            <MudTextField @bind-Value="resetPasswordRequest.NewPassword"
                          Label="New Password"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          FullWidth="true"
                          Class="mb-3 bg-white rounded-lg" />

            <MudTextField @bind-Value="resetPasswordRequest.ConfirmPassword"
                          Label="Confirm Password"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          FullWidth="true"
                          Class="mb-4 bg-white rounded-lg" />

            <div class="d-flex justify-center mt-4">
                <MudButton Variant="Variant.Filled"
                           Style="background-color: #3f51b5; color: white; border-radius: 4px; width: 180px;"
                           OnClick="Submit"
                           Size="Size.Large"
                           Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>Resetting...</span>
                    }
                    else
                    {
                        <span>Reset Password</span>
                    }
                </MudButton>
            </div>

            <div class="d-flex justify-center mt-4">
                <MudText Typo="Typo.body2" Style="color: rgba(255,255,255,0.8);">
                    Remembered your password?
                </MudText>
                <MudButton Variant="Variant.Text"
                           Color="Color.Default"
                           OnClick="@(() => Navigation.NavigateTo("/login"))"
                           Style="color: #3f51b5; padding: 0px 6px; min-width: 0; font-weight: 500;">
                    Login
                </MudButton>
            </div>
        </MudForm>
    </div>
</div>

@code {
    private ResetPasswordRequest resetPasswordRequest = new ResetPasswordRequest();
    private string message = "";
    private Severity severity = Severity.Info;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        resetPasswordRequest.Token = query["accessToken"] ?? "";

        if (string.IsNullOrEmpty(resetPasswordRequest.Token))
        {
            severity = Severity.Error;
            message = "Invalid or missing reset token.";
        }
    }

    private async Task Submit()
    {
        try
        {
            isLoading = true;
            message = "";

            if (string.IsNullOrEmpty(resetPasswordRequest.NewPassword) ||
                string.IsNullOrEmpty(resetPasswordRequest.ConfirmPassword))
            {
                severity = Severity.Error;
                message = "Please fill in all fields.";
                isLoading = false;
                return;
            }

            if (resetPasswordRequest.NewPassword != resetPasswordRequest.ConfirmPassword)
            {
                severity = Severity.Error;
                message = "Passwords do not match.";
                isLoading = false;
                return;
            }

            var response = await AuthService.ResetPassword(
                resetPasswordRequest.Token,
                resetPasswordRequest.NewPassword,
                resetPasswordRequest.ConfirmPassword);

            if (response != null)
            {
                severity = Severity.Success;
                message = response.Message;
                await Task.Delay(3000); // Show success message for 3 seconds
                Navigation.NavigateTo("/login");
            }
            else
            {
                severity = Severity.Error;
                message = "Failed to reset password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            severity = Severity.Error;
            message = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}