    private RenderFragment DeletePostPopover => @<MudPopover Open="@deletePostPopoverOpen"
                                                                 AnchorOrigin="Origin.TopCenter"
                                                                 TransformOrigin="Origin.TopCenter"
                                                                 Class="centered-popover">
